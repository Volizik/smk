.section
	position relative
	margin 10px 20px
	padding-bottom 5px
	display block
	border-bottom 2px dotted #999
	&:last-of-type
		border-bottom none
	&:after
		display block
		overflow hidden
		width 100%
		content ''
	&__row
		padding-bottom 10px
		display flex
		flex-direction row
		justify-content space-between
		&--reverse
			flex-direction row-reverse
			.framed-img
				margin-right 0
				margin-left 10px
	&__row-contacts
		padding-bottom 10px
		display flex
	&__row-label
		padding-right 5px
		min-width 140px
		font-family Tahoma, Verdana, Arial
		font-size 11px
		font-weight 700
		line-height 13px
	&__row-value
		display block
		font-family Tahoma, Verdana, Arial
		font-size 11px
		font-weight 400
		line-height 13px
	&__paragraph
		margin-bottom 10px
		font-family Tahoma, Verdana, Arial
		font-size 11px
		line-height 13px
		b
			font-weight 700
		a
			padding 0 5px
	&__image-links
		margin-bottom 10px
		display flex
		justify-content center
		align-items center
	&__image-link
		position relative
		margin 5px
		display block
		overflow hidden
		width 153px
		height 135px
		border-radius 20px
		box-shadow 2px 2px 10px #000
		transition .3s
		&:hover
			box-shadow 4px 4px 15px #000
			span
				left 50%
		img
			width 100%
			height 100%
			object-fit cover
		span
			position absolute
			transform translateX(-50%)
			font-family Tahoma, Verdana, Arial
			font-size 13px
			font-weight 500
			white-space nowrap
			text-shadow 0 0 5px #000
			color #fff
			transition .4s
		&-top
			top 10px
			left -1000px
		&-bottom
			left  1000px
			bottom 10px
	&__list
		width 100%
	&__list-title
		font-family Tahoma, Verdana, Arial
		font-size 11px
		font-weight 700
		color #000
	&__list-items
		padding-bottom 10px
	&__list-item
		padding-top 3px
		font-family Tahoma, Verdana, Arial
		font-size 11px
		font-weight 400
		line-height 13px
		color #000
		b
			padding-right 3px
			font-weight 700
		a
			padding-bottom 5px
			display inline-block
			text-transform uppercase
		&:before
			padding-x(5px)
			display inline-block
			content '-'
	&__img
		width 100%
		object-fit cover
	&__gallery
		display flex
		flex-wrap wrap
		justify-content space-between
		.framed-img
			margin-x(0)
			margin-bottom 10px