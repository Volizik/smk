.footer
	display block
	width 100%
	box-shadow 0 -1px 10px #555
	&__nav
		margin-y(2px)
		width 100%
		height 40px
		background linear-gradient(to bottom, #95a2ab 0, #67747d 100%)
		border-top 1px solid #000
		border-bottom 1px solid #000
	&__list
		display flex
		align-items center
		margin-right 20px
		margin-left auto
		width 100%
		max-width 500px
		height 100%
	&__item
		display flex
		justify-content center
		align-items center
		width 100px
		a
			font-family Tahoma, Verdana, Arial
			font-size 11px
			font-weight 700
			text-align center
			text-decoration none
			color #fff
			&:hover
				color #555
	&__bottom
		display flex
		flex-direction column
		justify-content center
		align-items center
		height 60px
		font-family Tahoma, Verdana, Arial
		font-size 10px
		font-weight 400
		line-height 13px
		color #fff
		background linear-gradient(to bottom, #0a2a5e 0, #4a7fb2 27%, #0a2a5e 100%)