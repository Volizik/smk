.nav
  position relative
  z-index 2
  display flex
  background #bbbbbb
  background linear-gradient(to bottom, #bbb 0, #fff 34%, #fff 70%, #777 100%)
  box-shadow 0 5px 10px 0 #888
  &__contacts
    margin-y(10px)
    display flex
    flex-direction column
    justify-content center
    align-items center
    font-family 'Times New Roman', Times, serif
    font-size 18px
    font-weight 700
    color #032259
    flex-grow 1
  &__menu
    display flex
    align-self flex-start
    border 2px solid #ccc
  &__item
    border 1px solid #fff
    border-right none
    box-shadow 0 0 2px 0 #000
    &:last-of-type
      border-right 1px solid #fff
    a
      display flex
      align-items center
      justify-content center
      width 110px
      height 40px
      font-family Oswald, sans-serif
      font-size 12px
      font-weight 700
      text-transform uppercase
      text-decoration none
      color #032259
      background linear-gradient(to bottom, #bbb 0, #fff 34%, #fff 70%, #777 100%)
      &:hover
        background #eee