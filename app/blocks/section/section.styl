.section
	margin 10px 20px
	padding-bottom 5px
	display block
	border-bottom 2px dotted #999
	&:last-of-type
		border-bottom none
	&:after
		display block
		overflow hidden
		width 100%
		content ''
	.framed-img
		float left
	&__text
		margin-bottom 10px
		font-family Tahoma, Verdana, Arial
		font-size 11px
		line-height 13px
		b
			font-weight 700
	&__image-links
		margin-bottom 10px
		display flex
		justify-content center
		align-items center
	&__image-link
		position relative
		margin 5px
		display block
		overflow hidden
		width 153px
		height 135px
		border-radius 20px
		box-shadow 2px 2px 10px #000
		transition .3s
		&:hover
			box-shadow 4px 4px 15px #000
			span
				left 50%
		img
			width 100%
			height 100%
			object-fit cover
		span
			position absolute
			transform translateX(-50%)
			font-family Tahoma, Verdana, Arial
			font-size 13px
			font-weight 500
			white-space nowrap
			text-shadow 0 0 5px #000
			color #fff
			transition .4s
		&-top
			top 10px
			left -1000px
		&-bottom
			left  1000px
			bottom 10px